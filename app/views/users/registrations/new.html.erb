<div id="top-bar" class="container" >
		  <h2>Registrazione</h2>
			<section class="header_text">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <center>
          <table width="50%" border="0">
            <tr>
              <td><%= f.label :nome %></td>
              <td><%= f.text_field :nome %></td>
            </tr>
            <tr>
              <td><%= f.label :email %></td>
              <td><%= f.email_field :email %></td>
            </tr>
            <tr>
              <td><%= f.label :password %></td>
              <td><% if @minimum_password_length %>
                  <em>(Minimo <%= @minimum_password_length %> caratteri)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off" %></td>
            </tr>
            <tr>
              <td><%= f.label "Conferma password" %></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
            </tr>
            <tr>
              <td><%= f.label :sesso %></td>
              <td>M: <%= radio_button("user", "sesso", "M") %> || F: <%= radio_button("user", "sesso", "F") %></td>
            </tr>
            <tr><td colspan="2">&nbsp;</td></tr>
            <tr>
              <td colspan="2" align="center"><%= f.submit "Registrati" %> || <%= button_tag "Reset", type: :reset %></td>
            </tr>
          </table>
          </center>
        <% end %>
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= button_to "Login con Facebook", omniauth_authorize_path(resource_name, provider) %>
          <% end -%>
        <% end -%>
			</section>