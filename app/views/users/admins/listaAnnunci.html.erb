<center><div class="page-header">
  <h1>Lista degli annunci di SmartBucket</h1>
  <% if notice %>
    <div class="alert alert-success">
      <strong><%= notice %></strong>
    </div>
  <% end %>
</div></center>	

<section class="main-content">				
	<div class="row">
		<div class="span12">
		  <div class="table-responsive">					
			  <table class="table table-striped">
  				<thead>
  					<tr>
              <th>ID</th>
              <th>Foto</th>
              <th>Titolo</th>
              <th>Categoria</th>
              <th>Stato</th>
              <th>Visite</th>
              <th>Luogo</th>
              <th colspan="4">Azioni</th>                        
  					</tr>
  				</thead>
  				<tbody>
  					  <% @announcements.each do |announcements| %>
                <tr>
                  <td><%= announcements.id %></td>
                  <td><% if (announcements.foto != "")  =%>
          						  <p><%= image_tag("#{announcements.foto}", width: 100, class: "img-rounded") %></p>
          						<% else %>
          							<p><%= image_tag("Temporanei/avatar", width: 100, class: "img-rounded") %></p>
          						<% end %>
          				</td>
                  <td><%= link_to "#{announcements.titolo}", announcements, "data-turbolinks" =>"false"%></td>
                  <td><%= announcements.categoria %></td>
                  <td><% if(announcements.etichetta == 0) %><div class="alert alert-success">Visibile</div><% elsif(announcements.etichetta == 1) %><div class="alert alert-warning">Prenotato</div><% else %><div class="alert alert-danger">Chiuso</div><% end %></td>
                  <td><%= announcements.visite %></td>
                  <td><%= announcements.luogo %></td>
                  <td><a data-toggle="tooltip" title="<%= announcements.descrizione %>">Descrizione</a></td>
                  <td><%= link_to "Modifica", "/modificaAnnuncio_show?id=#{announcements.id}", "data-turbolinks" =>"false" %> </td>
                  <td><% if(announcements.etichetta == 1 || announcements.etichetta == 0) %><font color="orange"><%= link_to "Chiudi", "/chiudiAnnuncio?id=#{announcements.id}", "data-turbolinks" =>"false" %> </font><% else %><font color="red"><%= link_to "Apri", "/apriAnnuncio?id=#{announcements.id}", "data-turbolinks" =>"false" %> </font><% end %></td>
                </tr>
              <% end %>
  					  <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
              </tr>		  
  					</tbody>
        </table>
      </div>
      <hr>
				<div class="pagination pagination-small pagination-centered">
					<%= will_paginate @announcements, :previous_label => 'Prec', :next_label => 'Succ', renderer: BootstrapPagination::Rails %>
				</div>
    </div>
  </div>
</section>


