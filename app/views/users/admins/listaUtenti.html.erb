<center><div class="page-header">
  <h1>Lista utenti di SmartBucket</h1>
  <% if notice %>
    <div class="alert alert-success">
      <strong><%= notice %></strong>
    </div>
  <% end %>
</div></center>	

<section class="main-content">				
	<div class="row">
		<div class="span12">
		  <div class="table-responsive">					
			  <table class="table table-striped">
  				<thead>
  					<tr>
              <th>Id</th>
              <th>Foto</th>
              <th>Nome</th>
              <th>Email</th>
              <th>Stato</th>
              <th>Iscritto il</th>
              <th>Sesso</th>
              <th>Livello</th>
              <th>Provider</th>
              <th colspan="4">Azioni</th>                            
  					</tr>
  				</thead>
  				<tbody>
  					  <% @users.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td><% if (user.foto != "")  =%>
          						  <p><%= image_tag("#{user.foto}", width: 100, class: "img-rounded") %></p>
          						<% else %>
          							<p><%= image_tag("Temporanei/avatar", width: 100, class: "img-rounded") %></p>
          						<% end %></td>
                  <td><%= user.nome %></td>
                  <td><%= user.email %></td>
                  <td><% if user.ban == 1 %><div class="alert alert-danger">Bannato</div><%else%><div class="alert alert-info">Normale</div><% end %></td>
                  <td><%= user.created_at %></td>
                  <td><%= user.sesso %></td>
                  <td><% if(user.tipo_utente == 1) %> Admin <% else %> Utente <% end %> </td>
                  <td><%= user.provider %></td>
                  <td><% if(user.tipo_utente == 1) %> <%= link_to "Fai utente", "/faiAdmin?id=#{user.id}&admin=0", "data-turbolinks" =>"false" %> <% else %> <%= link_to "Fai admin", "/faiAdmin?id=#{user.id}&admin=1", "data-turbolinks" =>"false" %> <% end %></td>
                  <td><% if(user.ban == 0) %> <%= link_to "Banna", "/banna_show?id=#{user.id}", "data-turbolinks" =>"false" %> <% else %> <%= link_to "Togli ban", "/togliBan?id=#{user.id}", "data-turbolinks" =>"false", "title" => "#{user.motivo_ban}", "id" => "sban" %> <% end %></td>
                  <td><%= link_to "Modifica", "/modificaUtente_show?id=#{user.id}", "data-turbolinks" =>"false" %></td>
                </tr>
              <% end %>
  					  <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
              </tr>		  
  					</tbody>
        </table>
      </div>
      <hr>
				<div class="pagination pagination-small pagination-centered">
					<%= will_paginate @users, :previous_label => 'Prec', :next_label => 'Succ', renderer: BootstrapPagination::Rails %>
				</div>
    </div>
  </div>
</section>
