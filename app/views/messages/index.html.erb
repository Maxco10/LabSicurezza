<p id="notice"><%= notice %></p>

<h1>Listing Messages ricevuti</h1>

<table  border="1">
  <thead>
    <tr>
      <th>Stato</th>
      <th>Data</th>
      <th>Titolo</th>
      <th>Mittente</th>
      <th>Destinatario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><% if(message.stato == 1) %> L <% else %> DL <% end %></td>
        <td><%= message.created_at %></td>
        <td><%= message.titolo %></td>
        <td><%= User.where("id = ?",message.mittente_id).take.nome %></td>
        <td><%= User.where("id = ?",message.destinatario_id).take.nome %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

