<center>
  <div class="page-header">
    <h1>Messaggi inviati</h1>
    <% if notice %>
      <div class="alert alert-success">
        <strong><%= notice %></strong>
      </div>
    <% end %>
  </div>
</center>
<section class="main-content">				
	<div class="row">
		<div class="span12">
		  <div class="table-responsive">					
			  <table class="table table-striped">
				<thead>
					<tr>
            <th>Stato</th>
            <th>Titolo</th>
            <th>Mittente</th>
            <th>Destinatario</th>
            <th>Data</th>
					</tr>
				</thead>
					<tbody>
					  <% @messages.each do |message| %>
              <tr>
                <td><% if(message.stato == 1) %> <span class="label label label-default">GI&Agrave; LETTO</span> <% else %><span class="label label label-info">IN ATTESA</span> <% end %></td>
                <td><%= link_to "#{message.titolo}", message %></td>
                <td><%= message.nome_mittente %></td>
                <td><%= message.nome_destinatario %></td>
                <td><%= message.created_at %></td>
              </tr>
            <% end %>
					  <tr>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
            </tr>		  
					</tbody>
        </table>
      </div>
    </div>
  </div>
</section>